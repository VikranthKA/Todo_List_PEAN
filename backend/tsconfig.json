  "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./node_modules/@types", "./src/types"]

  },
  "include": [
      "src/**/*.ts",
      "src/types/express.d.ts"  // Make sure this file is included
  ]
}
